{% extends 'layouts/base.html.twig' %}

{% block title 'Change Password' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center title">Change Password</h1>

            {{ form_start(form) }}
                <div class="form">
                    {{ form_widget(form) }}
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-lg">Update Password</button>    
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}